{
  "branches": ["master"],
  "plugins": [
    "@semantic-release/commit-analyzer",
    "@semantic-release/release-notes-generator",
    [
      "@semantic-release/changelog",
      {
        "changelogTitle": "# Changelog (auto-generated by semantic-release)",
        "changelogFile": "CHANGELOG.md"
      }
    ],
    [
      "@semantic-release/exec",
      {
        "prepareCmd": "bundle exec fastlane android release version:${nextRelease.version} && bundle exec fastlane android firebase"
      }
    ],
    [
      "@semantic-release/git",
      {
        "assets": ["CHANGELOG.md", "app/build.gradle.kts"],
        "message": "build(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
      }
    ],
    [
      "@semantic-release/github",
      {
        "assets": [
          {
            "path": "app/build/outputs/apk/release/app-release.apk",
            "label": "Android APK"
          }
        ]
      }
    ]
  ],
  "verifyReleaseCmd": "if [[ $SEMANTIC_RELEASE_NEXT_VERSION == 1* ]]; then echo '❌ Preventing jump to 1.x.x — still pre-release phase'; exit 1; fi",
  "publishCmd": "echo 'RELEASE_VERSION=${nextRelease.version}' >> $GITHUB_ENV",
  "tagFormat": "${version}"
}
